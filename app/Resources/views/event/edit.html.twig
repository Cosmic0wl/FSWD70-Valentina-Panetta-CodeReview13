{% extends 'base.html.twig' %}
{% form_theme edit_form 'bootstrap_4_layout.html.twig' %}
{% block body %}
<div class="row d-flex justify-content-center bg-pink">
<h1 class="display-4 r-shadow">Edit Event</h1>
</div>
<div class="row p-5 d-flex align-items-center">
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
        {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <input class="btn btn-lg btn-block btn-primary" type="submit" value="save" />
        {{ form_end(edit_form) }}
        
        {{ form_start(delete_form) }}
        <input class="btn btn-lg btn-block btn-primary my-4" type="submit" value="delete">
        {{ form_end(delete_form) }}

        <a class="btn btn-link mt-4" href="{{ path('event_index') }}"><i class="fa fa-arrow-left fa-2x"></i></a>
    </div>
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
        <img class="img-fluid" src="/img/venus.png">
    </div>
</div>
{% endblock %}
{% block stylesheets %}
<!-- custom css -->
<link rel="stylesheet" href="/css/style.css">
{% endblock %}