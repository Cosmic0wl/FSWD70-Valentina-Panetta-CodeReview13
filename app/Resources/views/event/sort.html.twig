{% extends 'base.html.twig' %}
{% block body %}
{% if events|length > 0 %}
<h1>{{ events[0].type }}</h1>
<div class="row">
    {% for event in events %}
    <div class="col-lg-4 col-md-6 col-sm-12 my-2">
        <div class="card">
            <img class="card-img-top d-none d-sm-none d-md-block" src="{{ event.image }}">
            <div class="card-body">
                <h5 class="card-title">{{ event.name }}</h5>
                <p class="card-text">{{ event.type }}</p>
                <p class="card-text">{{ event.address }}</p>
                <p class="card-text">{% if event.date_time %}{{ event.date_time|date('Y-m-d') }}{% endif %}</p>
                <p class="card-text">{% if event.date_time %}{{ event.date_time|date('H:i') }}{% endif %}</p>
                <a href="{{ path('event_show', { 'id': event.id }) }}"><button class="btn btn-primary">show</button></a>
                <a href="{{ path('event_edit', { 'id': event.id }) }}"><button class="btn btn-primary">edit</button></a>
            </div>
        </div>
    </div>
    {% endfor %}
    {% else %}
    <div class="col-12 text-center">
        <h1>Sorry no events available right now</h1>
        <a class="btn btn-link" href="{{ path('event_index') }}"><i class="fa fa-arrow-left"></i></a>
    </div>
</div>
{% endif %}
{% endblock %}