{% extends 'base.html.twig' %}

{% block body %}

<div class='row d-flex justify-content-center align-items-start p-4'>
    <div class='col-lg-6 col-md-6 col-sm-12 my-3'>
    <img class='img-fluid' src='{{ event.image }}'>
    </div>
    <div class='col-lg-6 col-md-6 col-sm-12 my-3'>
            <h5 class='righteous text-pink'>{{ event.name }}</h5>
            <p>{{ event.description }}</p>
            <p><i class="fa fa-star text-coral"></i> {{ event.type }}</p>
            <p><i class="fa fa-home text-coral"></i> {{ event.address }}</p>
            <p><i class="fa fa-envelope text-coral"></i> {{ event.email }}</p>
            <p><i class="fa fa-phone text-coral"></i> {{ event.phoneNumber }}</p>
            <p><i class="fa fa-laptop text-coral"></i> <a class="web" href="{{ event.website }}">Website</a></p>
            <p><i class="fa fa-users text-coral"></i> Capacity: {{ event.capacity }}</p>
            <p><i class="fa fa-calendar text-coral"></i> {% if event.dateTime %}{{ event.dateTime|date('Y-m-d H:i') }}{% endif %}</p>
            <div class="d-flex">
            <a class="btn btn-primary mr-4" href="{{ path('event_edit', { 'id': event.id }) }}">edit</a>
             {{ form_start(delete_form) }}
                <input class="btn btn-primary" type="submit" value="delete">
            {{ form_end(delete_form) }}
        </div>
        </div>
        <a class="btn btn-link" href="{{ path('event_index') }}"><i class="fa fa-arrow-left fa-2x"></i></a>
    </div>
{% endblock %}
