        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item {% if currentPath == '/' %} active{% endif %}">
                <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item {% if currentPath == '/new' %} active{% endif %}">
                <a class="nav-link" href="/new">Create</a>
            </li>
            <li class="nav-item {% if currentPath == '/sortMusic' %} active{% endif %}">
                <a class="nav-link" href="/sortMusic">Music</a>
            </li>
            <li class="nav-item {% if currentPath == '/sortArt' %} active{% endif %}">
                <a class="nav-link" href="/sortArt">Art</a>
            </li>
            <li class="nav-item {% if currentPath == '/sortFilm' %} active{% endif %}">
                <a class="nav-link" href="/sortFilm">Film</a>
            </li>
        </ul>
    </div>
</nav>